{
    "manifest_version": 3,
    "name": "Document.io Companion",
    "version": "1.0",
    "description": "The companion extension for Document.io which allows you to manage annotations on a page",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/modal_handlers.js",
                "scripts/page_handlers.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "ui/dist/assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}